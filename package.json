{
  "name": "base64-converter-electron",
  "version": "1.4.0",
  "description": "Advanced Base64 Converter Desktop App with Electron - Unified Interface + Batch Reverse for Images & PDFs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --dir",
    "build:win-full": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "package": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable",
    "pack": "electron-packager . \"Base64 Converter\" --platform=win32 --arch=x64 --out=release --overwrite --icon=assets/icon.ico"
  },
  "keywords": [
    "base64",
    "converter",
    "image",
    "electron",
    "desktop"
  ],
  "author": "MatheusANBS",
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.33.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.matheusanbs.base64converter",
    "productName": "Base64 Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "assets/**/*",
      "core/**/*",
      "utils/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
